class Solution {
    public String reversePrefix(String word, char ch) {
        if(word.indexOf(ch)==-1)return word;
        StringBuilder sb=new StringBuilder ();
        String reverse=word.substring(0,word.indexOf(ch)+1);
        sb.append(reverse).reverse().append(word.substring(word.indexOf(ch)+1,word.length()));
        return sb.toString();
    }
}
